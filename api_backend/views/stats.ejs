<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thống kê Email Campaign</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        .badge-status { min-width: 80px; padding: 8px; font-weight: 600; }
        .yes-badge { background-color: #28a745; color: white; } /* Xanh lá */
        .no-badge { background-color: #e9ecef; color: #6c757d; border: 1px solid #ced4da; } /* Xám nhạt */
    </style>
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary fw-bold">Email Customer Action Dashboard</h2>
            <button onclick="window.location.reload()" class="btn btn-outline-primary">Refresh</button>
        </div>
        
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary h-100 shadow-sm border-0">
                    <div class="card-body text-center py-4">
                        <h5 class="card-title text-uppercase opacity-75">Total leads</h5>
                        <h1 class="display-3 fw-bold"><%= totalLeads %></h1>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success h-100 shadow-sm border-0">
                    <div class="card-body text-center py-4">
                        <h5 class="card-title text-uppercase opacity-75">Total leads open</h5>
                        <h1 class="display-3 fw-bold"><%= totalOpens %></h1>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning text-dark h-100 shadow-sm border-0">
                    <div class="card-body text-center py-4">
                        <h5 class="card-title text-uppercase opacity-75">Total leads click</h5>
                        <h1 class="display-3 fw-bold"><%= totalClicks %></h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow border-0">
            <div class="card-header bg-dark text-white py-3">
                <div class="row fw-bold">
                    <div class="col-4">Name / Email</div>
                    <div class="col-2 text-center">Sent Email?</div> <div class="col-2 text-center">Opened?</div>
                    <div class="col-2 text-center">Clicked?</div>
                    <div class="col-2">Last action time</div>
                </div>
            </div>
            <div class="card-body p-0">
                <% leads.forEach(function(lead) { %>
                    <div class="row p-3 border-bottom align-items-center m-0 hover-effect">
                        
                        <div class="col-4">
                            <div class="fw-bold text-dark"><%= lead.name || 'No Name' %></div>
                            <div class="text-muted small"><%= lead.email %></div>
                        </div>

                        <div class="col-2 text-center">
                            <% if (lead.status === 'OLD') { %>
                                <span class="badge bg-primary badge-status">YES</span>
                            <% } else { %>
                                <span class="badge bg-secondary badge-status">NO</span>
                            <% } %>
                        </div>

                        <div class="col-2 text-center">
                            <% if (lead.hasOpened) { %>
                                <span class="badge yes-badge badge-status">YES</span>
                            <% } else { %>
                                <span class="badge no-badge badge-status">NO</span>
                            <% } %>
                        </div>

                        <div class="col-2 text-center">
                            <% if (lead.hasClicked) { %>
                                <span class="badge bg-warning text-dark badge-status">YES</span>
                            <% } else { %>
                                <span class="badge no-badge badge-status">NO</span>
                            <% } %>
                        </div>

                        <div class="col-2 text-muted small">
                            <%= lead.lastInteractionTime ? new Date(lead.lastInteractionTime).toLocaleString('vi-VN') : '-' %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</body>
</html>
